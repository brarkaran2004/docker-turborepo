generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Todo {
  id String @id @default(uuid())
  task String 
  done Boolean @default(false)
  userid  String
  user  User @relation(fields: [userid], references: [id]) //virtual relation222


}

model User {
  id String @id @default(uuid())
  username String
  password String
  todo Todo[] //virtual relation
}
